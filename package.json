{
  "name": "mcpstore",
  "displayName": "MCP Manager",
  "version": "1.0.0",
  "description": "Model Context Protokollerini (MCP) başlatma kodunuza göre otomatik olarak başlatan ve GitHub Copilot'u buna göre yapılandıran VS Code uzantısı.",
  "publisher": "mcp-team",
  "private": true,
  "license": "MIT",
  "main": "./dist/extension.js",
  "type": "commonjs",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p ./",
    "watch-tests": "tsc -w -p ./",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lordgrimx/mcp-starter.git"
  },
  "keywords": [
    "mcp",
    "server",
    "client",
    "vscode"
  ],
  "author": "",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "mcpManager.showPanel",
        "title": "MCP: Show Manager"
      },
      {
        "command": "mcpManager.addServer",
        "title": "Add Server",
        "icon": "$(add)"
      },
      {
        "command": "mcpManager.addClient",
        "title": "Add Client",
        "icon": "$(add)"
      },
      {
        "command": "mcpManager.startServer",
        "title": "Start Server"
      },
      {
        "command": "mcpManager.stopServer",
        "title": "Stop Server"
      },
      {
        "command": "mcpManager.startClient",
        "title": "Start Client"
      },
      {
        "command": "mcpManager.stopClient",
        "title": "Stop Client"
      },
      {
        "command": "mcpManager.showToolDetails",
        "title": "Show MCP Tool Details",
        "category": "MCP"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mcpManager",
          "title": "MCP Manager",
          "icon": "resources/mcp-icon.svg"
        }
      ]
    },
    "views": {
      "mcpManager": [
        {
          "id": "mcpServersView",
          "name": "Servers",
          "icon": "resources/server.svg",
          "contextualTitle": "MCP Servers"
        },
        {
          "id": "mcpClientsView",
          "name": "Clients",
          "icon": "resources/client.svg",
          "contextualTitle": "MCP Clients"
        },
        {
          "id": "mcpToolsView",
          "name": "Tools",
          "icon": "resources/tools.svg",
          "contextualTitle": "MCP Tools"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "mcpManager.addServer",
          "when": "view == mcpServersView",
          "group": "navigation"
        },
        {
          "command": "mcpManager.addClient",
          "when": "view == mcpClientsView",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "MCP Manager",
      "properties": {
        "mcpmanager.servers": {
          "type": "array",
          "default": [],
          "description": "Stored MCP server configurations"
        },
        "mcpmanager.clients": {
          "type": "array",
          "default": [],
          "description": "Stored MCP client configurations"
        },
        "mcpmanager.enableToolViews": {
          "type": "boolean",
          "default": true,
          "description": "Enable MCP tool views in the activity bar"
        },
        "mcpmanager.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show MCP status in the status bar"
        },
        "mcpmanager.autoStartServers": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start servers when VS Code starts"
        },
        "mcpmanager.logLevel": {
          "type": "string",
          "enum": ["debug", "info", "warn", "error"],
          "default": "info",
          "description": "Log level for MCP Manager"
        },
        "mcpmanager.tools": {
          "type": "object",
          "default": {
            "ProcessManager": {
              "enabled": true,
              "shortcut": "mcp.process"
            },
            "SSEClient": {
              "enabled": true,
              "shortcut": "mcp.sse"
            },
            "CommandRunner": {
              "enabled": true,
              "shortcut": "mcp.cmd"
            },
            "NetworkMonitor": {
              "enabled": true,
              "shortcut": "mcp.net"
            }
          },
          "description": "MCP tool configurations and shortcuts"
        },
        "mcp": {
          "type": "object",
          "properties": {
            "inputs": {
              "type": "array",
              "default": [],
              "description": "MCP input configurations"
            },
            "servers": {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "required": ["command"],
                "properties": {
                  "command": {
                    "type": "string",
                    "description": "The command to run the MCP server"
                  },
                  "args": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "Command line arguments for the server"
                  },
                  "env": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "string"
                    },
                    "description": "Environment variables for the server"
                  }
                }
              },
              "default": {},
              "description": "MCP server configurations"
            }
          },
          "default": {
            "inputs": [],
            "servers": {}
          },
          "description": "MCP settings"
        }
      }
    }
  },
  "bugs": {
    "url": "https://github.com/lordgrimx/mcp-starter/issues"
  },
  "homepage": "https://github.com/lordgrimx/mcp-starter#readme",
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.80.0",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "copy-webpack-plugin": "^13.0.0",
    "eslint": "^8.39.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2"
  },
  "dependencies": {
    "@types/ws": "^8.18.0",
    "eventsource-parser": "^3.0.0",
    "sse.js": "^2.6.0",
    "ws": "^8.18.1"
  }
}
