{
  "name": "mcpstore",
  "displayName": "MCP Manager",
  "version": "1.0.0",
  "description": "Model Context Protokollerini (MCP) başlatma kodunuza göre otomatik olarak başlatan ve GitHub Copilot'u buna göre yapılandıran VS Code uzantısı.",
  "publisher": "mcp-team",
  "private": true,
  "license": "MIT",
  "main": "./dist/extension.js",
  "type": "commonjs",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p ./",
    "watch-tests": "tsc -w -p ./",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lordgrimx/mcp-starter.git"
  },
  "keywords": [
    "mcp",
    "server",
    "client",
    "vscode"
  ],
  "author": "",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "mcpManager.showPanel",
        "title": "MCP: Show Manager"
      },
      {
        "command": "mcpManager.addServer",
        "title": "Add Server",
        "icon": "$(add)"
      },
      {
        "command": "mcpManager.addClient",
        "title": "Add Client",
        "icon": "$(add)"
      },
      {
        "command": "mcpManager.startServer",
        "title": "Start Server"
      },
      {
        "command": "mcpManager.stopServer",
        "title": "Stop Server"
      },
      {
        "command": "mcpManager.startClient",
        "title": "Start Client"
      },
      {
        "command": "mcpManager.stopClient",
        "title": "Stop Client"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mcpManager",
          "title": "MCP Manager",
          "icon": "resources/mcp-icon.svg"
        }
      ]
    },
    "views": {
      "mcpManager": [
        {
          "id": "mcpServersView",
          "name": "Servers",
          "icon": "resources/server.svg"
        },
        {
          "id": "mcpClientsView",
          "name": "Clients",
          "icon": "resources/client.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "mcpManager.addServer",
          "when": "view == mcpServersView",
          "group": "navigation"
        },
        {
          "command": "mcpManager.addClient",
          "when": "view == mcpClientsView",
          "group": "navigation"
        }
      ]
    }
  },
  "bugs": {
    "url": "https://github.com/lordgrimx/mcp-starter/issues"
  },
  "homepage": "https://github.com/lordgrimx/mcp-starter#readme",
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.80.0",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2"
  }
}
